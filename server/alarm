        }
        .panel {
            background-color: rgba(0, 0, 0, 0.7); /* Semi-transparent background for contrast */
            border: 2px solid #000;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            width: 100%; /* Full width */
            max-width: 800px; /* Maximum width for larger screens */
            padding: 20px;
            position: relative; /* Relative positioning for internal elements */
        }
        .header {
            display: flex;
            justify-content: space-around;
            align-items: center;
            margin-bottom: 20px;
        }
        .light {
            display: inline-block;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            margin-bottom: 5px; /* Space below the light */
            background-color: gray; /* Default color for off lights */
        }
        .acPower {
            background-color: green; /* AC Power light is green */
        }
        .trouble {
            animation: flash 1s infinite; /* Blinking effect for Trouble light */
        }
        @keyframes flash {
            0%, 100% { background-color: gray; }
            50% { background-color: yellow; } /* Flashing from gray to yellow */
        }
        .fire-alarm {
            animation: flash-red 1s infinite; /* Flashing red effect */
        }
        @keyframes flash-red {
            0%, 100% { background-color: red; }
            50% { background-color: darkorange; } /* Flashing effect for Fire Alarm light */
        }
        .silenced {
            animation: blink-orange 1s infinite; /* Blinking effect for Alarm Silenced */
        }
        @keyframes blink-orange {
            0%, 100% { background-color: gray; }
            50% { background-color: orange; } /* Blinking orange */
        }
        h2 {
            margin: 0 0 10px 0; /* Margin for spacing */
            font-size: 1.5em; /* Size of the header text */
            color: yellow; /* Color for the header text */
        }

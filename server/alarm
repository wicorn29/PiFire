    <script>
        let alarmSound = new Audio('https://github.com/wicorn29/PiFire/raw/main/server/Alarm.mp3'); // Create audio object

        function silenceAlarm() {
            const alarmSilencedLight = document.getElementById("alarmSilenced");
            alarmSilencedLight.classList.add("silenced");

            const silenceButton = document.getElementById("silenceButton");
            silenceButton.classList.add("hidden"); // Hide the silence button
            
            document.body.style.backgroundColor = "orange"; // Change background to orange after button press
            startFlashingBackground(); // Start flashing effect

            alarmSound.pause(); // Pause the alarm sound
        }

        function startFlashingBackground() {
            setInterval(() => {
                document.body.style.backgroundColor = 
                    document.body.style.backgroundColor === "orange" ? "yellow" : "orange"; // Flash between colors
            }, 1000); // Change color every second
        }

        // Play the alarm sound when the page loads
        window.onload = function() {
            alarmSound.loop = true; // Set the audio to loop
            alarmSound.play(); // Play the sound
        };
    </script>
